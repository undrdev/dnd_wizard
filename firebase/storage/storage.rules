rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can only upload/access files in their own folders
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Campaign assets - users can only access assets for campaigns they own
    // Note: This is a simplified rule. In production, you might want to add
    // additional validation by checking the campaign ownership in Firestore
    match /campaigns/{campaignId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
