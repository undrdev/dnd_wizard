rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Campaigns - users can only access campaigns they own
    match /campaigns/{campaignId} {
      allow read, write: if isOwner(resource.data.ownerId);
      allow create: if isOwner(request.resource.data.ownerId);
    }

    // Locations - users can only access locations in their campaigns
    match /locations/{locationId} {
      allow read, write: if isOwner(get(/databases/$(database)/documents/campaigns/$(resource.data.campaignId)).data.ownerId);
      allow create: if isOwner(get(/databases/$(database)/documents/campaigns/$(request.resource.data.campaignId)).data.ownerId);
    }

    // NPCs - users can only access NPCs in their campaigns
    match /npcs/{npcId} {
      allow read, write: if isOwner(get(/databases/$(database)/documents/campaigns/$(resource.data.campaignId)).data.ownerId);
      allow create: if isOwner(get(/databases/$(database)/documents/campaigns/$(request.resource.data.campaignId)).data.ownerId);
    }

    // Quests - users can only access quests in their campaigns
    match /quests/{questId} {
      allow read, write: if isOwner(get(/databases/$(database)/documents/campaigns/$(resource.data.campaignId)).data.ownerId);
      allow create: if isOwner(get(/databases/$(database)/documents/campaigns/$(request.resource.data.campaignId)).data.ownerId);
    }

    // AI Context - users can only access AI context for their campaigns
    match /aiContext/{campaignId} {
      allow read, write: if isOwner(get(/databases/$(database)/documents/campaigns/$(campaignId)).data.ownerId);
      allow create: if isOwner(get(/databases/$(database)/documents/campaigns/$(campaignId)).data.ownerId);
    }

    // AI Usage Logs - users can only access their own usage logs
    match /aiUsageLogs/{logId} {
      allow read, write: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // User Settings - users can only access their own settings
    match /userSettings/{userId} {
      allow read, write: if isOwner(userId);
      allow create: if isOwner(userId);
    }

    // Content Templates - users can only access their own templates
    match /contentTemplates/{templateId} {
      allow read, write: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Backups - users can only access their own backups
    match /backups/{backupId} {
      allow read, write: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Backup Data - users can only access their own backup data
    match /backup_data/{backupId} {
      allow read, write: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }
  }
}
